{
  
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the React version
    }
  },

	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@next/next/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
  
	"rules": {
		"react/react-in-jsx-scope": "off"
	}
}
